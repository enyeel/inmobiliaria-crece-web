---
import "../../styles/global.css";
import { supabase } from "../../lib/supabase";
import { marked } from "marked";

// 1. Obtener el ID de la URL (ej: propiedad/15)
const { id } = Astro.params;

// 2. Redirigir si no hay ID
if (!id) return Astro.redirect("/");

// 3. Buscar esa casa especÃ­fica en Supabase
const { data: casa, error } = await supabase
  .from("propiedades")
  .select("*")
  .eq("id", id)
  .single(); // .single() es vital, nos devuelve un objeto, no un array

// 4. Si no existe, error 404 (o redirigir)
if (error || !casa) return Astro.redirect("/404");
